<actions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-actions-1.0.xsd">

    <!-- Example ServiceTest ServiceFacade -->
    <set field="createExampleMap.exampleTypeId" value="CONTRIVED"/>
    <set field="createExampleMap.exampleName" value="Test Example"/>
    <set field="createExampleMap.statusId" value="EXST_IN_DESIGN"/>
    
    <call-service verb="create" noun="Example" in-map="createExampleMap" out-map="createExampleResult"/>
    <set field="exampleId" from-field="createExampleResult.exampleId"/>

    <entity-find-one entity-name="Example" value-field="example"/>

    <assert>
        <compare field="example" operator="not-empty"/>
        <compare field="example.exampleTypeId" to-field="createExampleMap.exampleTypeId"/>
        <compare field="example.exampleName" to-field="createExampleMap.exampleName"/>
        <compare field="example.statusId" to-field="createExampleMap.statusId"/>
    </assert>

    <check-errors/>
</actions>
