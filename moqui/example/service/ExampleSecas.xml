<secas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-eca-1.0.xsd">
    <seca service="createExample" event="return">
        <action service-name="createExampleStatus" mode="sync"/>
    </seca>
    <seca service="updateExample" event="return">
        <condition>
            <compare field="statusId" operator="not-equals" to-field="oldStatusId"/>
        </condition>
        <action service-name="createExampleStatus" mode="sync"/>
    </seca>
</secas>
