<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-include="false">

    <transition name="lookupExampleFeature"><transition-response url="LookupExampleFeature"/></transition>

    <section>
        <actions>
            <entity-find entity-name="ExampleFeature" list="exampleFeatureList">
                <search-form-inputs/>
                <order-by field-name="description"/>
            </entity-find>
        </actions>
        <widgets>
            <form name="FindExampleFeature" type="single" transition="lookupExampleFeature">
                <auto-fields-entity entity-name="ExampleFeature" field-type="find"/>
                <field name="exampleFeatureId" title="Example Feature ID"/>
                <field name="featureSourceEnumId" title="Feature Source">
                    <drop-down allow-empty="true">
                        <entity-options entity-name="Enumeration" key-field="enumId" text="${description} [${enumCode}]">
                            <condition-expr field-name="enumTypeId" value="EXMPL_FEAT_SOURCE"/>
                            <order-by field-name="sequenceId"/>
                        </entity-options>
                    </drop-down>
                </field>
                <field name="description" title="Description"/>
                <field name="submitButton" title="Find"><submit button-type="button"/></field>
            </form>

            <form name="ListExampleFeatures" type="list" list="exampleFeatureList">
                <!--<auto-fields-entity entity-name="ExampleFeature" field-type="display"/>-->
                <field name="exampleFeatureId" title="Example Feature ID">
                    <link url="javascript:set_value('${exampleFeatureId}')" url-type="plain" text="${exampleFeatureId}"/>
                </field>
                <field name="featureSourceEnumId" title="Feature Source">
                    <display-entity entity-name="Enumeration" key-field-name="enumId" text="${description} [${enumCode}]"/>
                </field>
                <field name="description" title="Description"><display/></field>
            </form>
        </widgets>
    </section>
</screen>
