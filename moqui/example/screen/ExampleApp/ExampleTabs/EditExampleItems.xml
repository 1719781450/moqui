<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Items" default-menu-index="2">
    <parameter name="exampleId"/>

    <transition name="createExampleItem">
        <actions><call-service service-name="createExampleItem" auto-in-map="true"/></actions>
        <default-response url="EditExampleItems"/>
    </transition>
    <transition name="updateExampleItem">
        <actions><call-service service-name="updateExampleItem" auto-in-map="true"/></actions>
        <default-response url="EditExampleItems"/>
    </transition>
    <transition name="deleteExampleItem">
        <actions><call-service service-name="deleteExampleItem" auto-in-map="true"/></actions>
        <default-response url="EditExampleItems"/>
    </transition>

    <section>
        <actions>
            <entity-find entity-name="ExampleItem" list="exampleItemList">
                <condition-expr field-name="exampleId" from-field="exampleId"/>
                <order-by field-name="exampleItemSeqId"/>
            </entity-find>
        </actions>
        <widgets>
            <form name="ListExampleItems" transition="updateExampleItem" type="list" list="exampleItemList">
                <auto-fields-service service-name="updateExampleItem"/>
                <field name="exampleId"><hidden/></field>
                <field name="exampleItemSeqId" title="Item"><display/></field>
                <field name="description"><text size="30"/></field>
                <field name="amountUomId" title="UOM">
                    <drop-down allow-empty="true">
                        <entity-options entity-name="UomAndType" key-field="uomId" text="${typeDescription}: ${description} (${abbreviation})">
                            <order-by field-name="typeDescription"/>
                            <order-by field-name="description"/>
                        </entity-options>
                    </drop-down>
                </field>
                <field name="deleteLink">
                    <!-- the parameters for this will be auto-mapped: exampleId, exampleItemSeqId -->
                    <link url="deleteExampleItem" text="Delete" confirmation-message="Really Delete?"/>
                </field>
                <field name="submitButton" title="${uiLabelMap.CommonUpdate}"><submit button-type="button"/></field>
            </form>

            <form name="AddExampleItem" type="single" transition="createExampleItem">
                <auto-fields-service service-name="createExampleItem"/>
                <field name="exampleId"><hidden/></field>
                <field name="exampleItemSeqId"><ignored/><!-- this will be auto-sequenced --></field>
                <field name="amountUomId" title="UOM">
                    <drop-down allow-empty="true">
                        <entity-options entity-name="UomAndType" key-field="uomId" text="${typeDescription}: ${description} (${abbreviation})">
                            <order-by field-name="typeDescription"/>
                            <order-by field-name="description"/>
                        </entity-options>
                    </drop-down>
                </field>
                <field name="submitButton" title="Add"><submit button-type="button" confirmation-message="Really Add?"/></field>
            </form>
        </widgets>
    </section>
</screen>
