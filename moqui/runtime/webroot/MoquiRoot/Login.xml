<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-include="false" require-authentication="false">
    <transition name="login">
        <actions><call-script>
            ec.user.loginUser(ec.web.requestParameters.userId, ec.web.requestParameters.password, ec.web.requestParameters.tenantId)
        </call-script></actions>
        <default-response type="screen-last"/>
        <error-response url="."/>
    </transition>
    <transition name="logout">
        <actions><call-script>ec.user.logoutUser()</call-script></actions>
        <default-response url="/"/>
        <error-response url="."/>
    </transition>
    <widgets>
        <container id="LoginBox">
            <form-single name="login" transition="login">
                <field name="userId" title="Username"><text-line size="20"/></field>
                <field name="password"><password size="20"/></field>
                <field name="tenantId"><text-line size="20"/></field>
                <field name="submit" title="Login"><submit/></field>
            </form-single>
            <!-- TODO add forgot password, etc -->

            <!-- TODO remove this link when the normal login form is implemented -->
            <link url="login" text="Login as John Doe">
                <parameter name="userId" value="john.doe"/>
                <parameter name="password" value="moqui"/>
            </link>
        </container>
    </widgets>
</screen>
