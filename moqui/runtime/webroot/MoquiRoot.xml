<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd">
    <subscreens default-item="example">
        <!-- refer to the various app roots here -->
        <subscreens-item name="example" location="component://example/screen/ExampleApp.xml"
                         menu-title="Example" menu-index="9"/>
    </subscreens>
    <widgets>
        <render-mode><text type="html" location="webroot/includes/HtmlHeader.html.ftl"/></render-mode>

        <container-panel id="WebrootPanel">
            <panel-header>
                <label text="Welcome to Moqui"/>
            </panel-header>
            <panel-center>
                <section-iterate name="message" list="ec.message.messages" entry="message">
                    <widgets><container style="message"><label text="${message}"/></container></widgets>
                </section-iterate>
                <section-iterate name="error" list="ec.message.errors" entry="errorMessage">
                    <widgets><container style="message error"><label text="${errorMessage}"/></container></widgets>
                </section-iterate>

                <subscreens-panel id="WebrootSubsPanel" type="tab"/>
            </panel-center>
            <panel-footer>
                <label text="Built on Moqui"/>
            </panel-footer>
        </container-panel>

        <render-mode><text type="html" location="webroot/includes/HtmlFooter.html.ftl"/></render-mode>
    </widgets>
</screen>
