<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd">
    <web-settings require-authentication="false"/><!-- NOTE: this is required to allow sub-screens to decide, and because the Login screen is below this. -->
    <subscreens default-item="example">
        <!-- refer to the various app roots here -->
        <subscreens-item name="example" location="component://example/screen/ExampleApp.xml"
                         menu-title="Example" menu-index="9"/>
    </subscreens>
    <widgets>
        <render-mode><text type="html" location="webroot/includes/HtmlHeader.html.ftl"/></render-mode>

        <container-panel id="WebrootPanel">
            <panel-header>
                <container id="header-logo"><label text="Welcome to Moqui" type="h1"/></container>
                <container id="header-menu"><subscreens-menu/></container>
            </panel-header>
            <panel-center>
                <section-iterate name="message" list="ec.message.messages" entry="message">
                    <widgets><container style="message"><label text="${message}"/></container></widgets>
                </section-iterate>
                <section-iterate name="error" list="ec.message.errors" entry="errorMessage">
                    <widgets><container style="message error"><label text="${errorMessage}"/></container></widgets>
                </section-iterate>

                <subscreens-active id="WebrootSubsPanel"/>
            </panel-center>
            <panel-footer>
                <render-mode><text type="html"><![CDATA[<h6>Built on <a href="http://www.moqui.org/">Moqui</a></h6>]]></text></render-mode>
            </panel-footer>
        </container-panel>

        <render-mode><text type="html"><![CDATA[</body></html>]]></text></render-mode>
    </widgets>
</screen>
