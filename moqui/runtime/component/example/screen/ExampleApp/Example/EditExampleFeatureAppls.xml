<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Features" default-menu-index="3">
    
    <parameter name="exampleId"/>

    <transition name="editExampleFeature"><default-response url="../../FeatureTabs/EditExampleFeature"/></transition>
    <transition name="createExampleFeatureAppl">
        <call-service name="create#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>
    <transition name="updateExampleFeatureAppl">
        <call-service name="update#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteExampleFeatureAppl">
        <call-service name="delete#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="ExampleFeatureAppl" list="exampleFeatureApplList">
            <econdition field-name="exampleId" from-field="exampleId"/>
            <order-by field-name="sequenceNum"/>
        </entity-find>
    </actions>
    <widgets>
        <form-list name="ListExampleFeatureAppls" transition="updateExampleFeatureAppl" list="exampleFeatureApplList">
            <auto-fields-service service-name="updateExampleFeatureAppl"/>
            <field name="exampleId"><hidden/></field>
            <field name="exampleFeatureId" title="Feature">
                <display-entity entity-name="ExampleFeature" text="${description}"/>
                <!-- no need for explicit parameter sub-element because the target screen has it declared as a parameter -->
                <link url="editExampleFeature" text="[${exampleFeatureId}]"/>
            </field>
            <field name="fromDate"><display/></field>
            <field name="exampleFeatureApplTypeId" title="Type">
                <drop-down allow-empty="false">
                    <entity-options entity-name="ExampleFeatureApplType" text="${description}">
                        <order-by field-name="description"/>
                    </entity-options>
                </drop-down>
            </field>
            <field name="submitButton" title="Update"><submit button-type="button"/></field>
            <field name="deleteLink">
                <!-- no need to specify parameters for this link since the local env names match the parameter
                names and will be auto-mapped (exampleId, exampleFeatureId, fromDate) -->
                <link url="deleteExampleFeatureAppl" text="Delete"/>
            </field>
        </form-list>

        <form-single name="AddExampleFeatureAppl" transition="createExampleFeatureAppl">
            <auto-fields-service service-name="createExampleFeatureAppl"/>
            <field name="exampleId"><hidden/></field>

            <field name="exampleFeatureId" title="Feature">
                <lookup target-screen="/ExampleApp/LookupExampleFeature"/>
            </field>
            <!-- auto-complete: partial text entry searches the full string; this is only an example since
            usability is low as you can't see the full list, you HAVE to know part of the ID or description in
            order to see options -->
            <!-- uncomment to try it out:
            <field name="exampleFeatureId">
                <drop-down auto-complete="true">
                    <entity-options entity-name="ExampleFeature" text="${exampleFeatureId}: ${description}">
                        <order-by field-name="exampleFeatureId"/>
                    </entity-options>
                </drop-down>
            </field>
            -->

            <field name="exampleFeatureApplTypeId" title="Type">
                <drop-down allow-empty="false">
                    <entity-options entity-name="ExampleFeatureApplType" text="${description}">
                        <order-by field-name="description"/>
                    </entity-options>
                </drop-down>
            </field>
            <field name="submitButton" title="Add"><submit button-type="button"/></field>
        </form-single>
    </widgets>
</screen>
