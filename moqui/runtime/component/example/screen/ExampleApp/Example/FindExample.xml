<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-include="false">

    <transition name="newExample"><default-response url="../EditExample"/></transition>
    <transition name="findExample"><default-response url="."/></transition>
    <transition name="editExample"><default-response url="../EditExample"/></transition>

    <actions>
        <entity-find entity-name="Example" list="exampleList">
            <search-form-inputs/>
            <order-by field-name="${context.sortByField?:''}"/>
        </entity-find>

        <entity-find entity-name="Enumeration" list="exampleTypeEnumList">
            <econdition field-name="enumTypeId" value="EXAMPLE_TYPE"/>
            <order-by field-name="description"/>
        </entity-find>
        <entity-find entity-name="ExampleStatusItem" list="exampleStatusItemList"/>
    </actions>
    <widgets>
        <container><link url="newExample" text="New Example"/></container>
        <form-list name="ListExamples" list="exampleList">
            <field name="exampleId">
                <header-field><text-find/></header-field>
                <default-field>
                    <!-- this list will pass an exampleId param, as defined on the EditExample screen as an incoming parameter -->
                    <link url="editExample" text="${exampleId}"/>
                </default-field>
            </field>
            <field name="exampleName">
                <header-field title="Name" show-order-by="true"><text-find/></header-field>
                <default-field><display/></default-field>
            </field>
            <field name="exampleTypeEnumId">
                <header-field title="Type">
                    <drop-down allow-empty="true">
                        <list-options list="exampleTypeEnumList" key="${enumId}" text="${description}"/>
                    </drop-down>
                </header-field>
                <default-field><display-entity entity-name="Enumeration"/></default-field>
            </field>
            <field name="statusId">
                <header-field title="Status">
                    <drop-down allow-empty="true">
                        <list-options list="exampleStatusItemList" text="${description}"/>
                    </drop-down>
                </header-field>
                <default-field><display-entity entity-name="StatusItem"/></default-field>
            </field>
            <field name="description">
                <header-field show-order-by="true"/>
                <default-field><display/></default-field>
            </field>
            <field name="searchButton"><header-field title="Find"><submit/></header-field></field>
        </form-list>
    </widgets>
</screen>
