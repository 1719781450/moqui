<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Examples" default-menu-index="2">
    
    <parameter name="exampleFeatureId"/>

    <transition name="editExample"><default-response url="../../ExampleTabs/EditExample"/></transition>
    <transition name="createExampleFeatureAppl">
        <service name="org.moqui.example.ExampleServices.create#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>
    <transition name="updateExampleFeatureAppl">
        <service name="update#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteExampleFeatureAppl">
        <service name="delete#ExampleFeatureAppl"/>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="ExampleFeatureAppl" list="exampleFeatureApplList">
            <econdition field-name="exampleFeatureId" from="ec.web.parameters.exampleFeatureId"/>
            <order-by field-name="sequenceNum"/>
        </entity-find>

        <entity-find entity-name="Enumeration" list="exampleFeatureApplEnumList">
            <econdition field-name="enumTypeId" value="EXAMPLE_FEATURE_APPL"/>
            <order-by field-name="description"/>
        </entity-find>
        <entity-find entity-name="Example" list="allExampleList">
            <order-by field-name="exampleName"/>
        </entity-find>
    </actions>
    <widgets>
        <form-list name="ListExampleFeatureAppls" transition="updateExampleFeatureAppl" list="exampleFeatureApplList">
            <auto-fields-service service-name="update#ExampleFeatureAppl"/>
            <field name="exampleId">
                <default-field title="Example">
                    <display-entity entity-name="Example" text="${exampleName}"/>
                    <link url="editExample" text="${exampleId}"/>
                </default-field>
            </field>
            <field name="exampleFeatureId"><default-field><hidden/></default-field></field>
            <field name="fromDate"><default-field><display/></default-field></field>
            <field name="exampleFeatureApplEnumId">
                <default-field title="Type">
                    <drop-down allow-empty="false">
                        <list-options list="exampleFeatureApplEnumList" text="${description}"/>
                    </drop-down>
                </default-field>
            </field>
            <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
            <field name="deleteLink">
                <default-field>
                    <!-- no need to specify parameters for this link since the local env names match the parameter
                    names and will be auto-mapped (exampleId, exampleFeatureId, fromDate) -->
                    <link url="deleteExampleFeatureAppl" text="Delete"/>
                </default-field>
            </field>
        </form-list>

        <form-single name="AddExampleFeatureAppl" transition="createExampleFeatureAppl">
            <auto-fields-service service-name="create#ExampleFeatureAppl"/>
            <field name="exampleId">
                <default-field title="Example">
                    <drop-down allow-empty="false">
                        <list-options list="allExampleList" text="${exampleName} [${exampleId}]"/>
                    </drop-down>
                </default-field>
            </field>
            <field name="exampleFeatureId"><default-field><hidden/></default-field></field>

            <field name="exampleFeatureApplEnumId">
                <default-field title="Type">
                    <drop-down allow-empty="false">
                        <list-options list="exampleFeatureApplEnumList" text="${description}"/>
                    </drop-down>
                </default-field>
            </field>
            <field name="submitButton"><default-field title="Add"><submit/></default-field></field>
        </form-single>
    </widgets>
</screen>
