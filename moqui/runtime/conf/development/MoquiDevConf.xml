<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-1.0.xsd">

    <cache-list>
        <!-- Development Mode - don't use these for production, load testing, etc.
             Cleared by default every 10 seconds from when loaded into cache. -->
        <cache name="entity.definition" expire-time-idle="10"/>
        <cache name="entity.location" expire-time-idle="120"/>

        <cache name="service.location" expire-time-idle="10"/>
        <cache name="service.java.class" expire-time-idle="10"/>

        <cache name="screen.location" expire-time-idle="10"/>
        <cache name="screen.template.mode" expire-time-idle="10"/>
        <cache name="screen.template.location" expire-time-idle="10"/>

        <cache name="resource.xml-actions.location" expire-time-idle="10"/>
        <cache name="resource.groovy.location" expire-time-idle="10"/>

        <cache name="resource.ftl.location" expire-time-idle="10"/>
        <cache name="resource.cwiki.location" expire-time-idle="10"/>
        <cache name="resource.text.location" expire-time-idle="10"/>
    </cache-list>
    
    <server-stats bin-length-seconds="900" proxy-enabled="false" visit-persist="true" visitor-persist="true">
        <!-- For development, track everything! It'll run slow through... -->
        <artifact-stats type="screen" track-bin="true" persist-bin="true" persist-hit="true"/>
        <artifact-stats type="transition" track-bin="true" persist-bin="true" persist-hit="true"/>
        <artifact-stats type="service" track-bin="true" persist-bin="true" persist-hit="true"/>
        <artifact-stats type="entity" track-bin="true" persist-bin="true" persist-hit="true"/>
    </server-stats>

    <webapp-list><webapp name="webroot" https-enabled="false"/></webapp-list>

    <screen-facade boundary-comments="true"/>

    <repository-list>
        <repository name="main" location="http://localhost:8081/server" type="davex" workspace="development"/>
    </repository-list>
</moqui-conf>
