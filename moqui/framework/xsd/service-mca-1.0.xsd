<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:include schemaLocation="xml-actions-1.0.xsd"/>

    <xs:element name="smcas">
        <xs:complexType>
            <xs:sequence>
                <xs:element maxOccurs="unbounded" ref="smca"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="smca">
        <xs:annotation>
            <xs:documentation>
                Whenever an email message is received the actions inline will be run if the condition is met.

                The context for the conditon checking and set operation will include a "headers" Map with all of the
                email headers in it, and a "fields" Map with all of the email fields in it (to, from, etc).
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element minOccurs="0" ref="condition"/>
                <xs:choice maxOccurs="unbounded">
                    <xs:element ref="set"/>
                    <xs:element ref="action"/>
                </xs:choice>
            </xs:sequence>
            <xs:attribute type="xs:string" name="mail-rule-name" use="required"/>
        </xs:complexType>
    </xs:element>
    <xs:element name="action">
        <xs:complexType>
            <xs:attribute type="xs:string" name="service" use="required"/>
            <xs:attribute name="mode" use="required">
                <xs:simpleType>
                    <xs:restriction base="xs:token">
                        <xs:enumeration value="sync"/>
                        <xs:enumeration value="async"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:attribute>
            <xs:attribute type="xs:string" name="run-as-user"/>
            <xs:attribute name="persist" default="false">
                <xs:simpleType>
                    <xs:restriction base="xs:token">
                        <xs:enumeration value="true"/>
                        <xs:enumeration value="false"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
</xs:schema>
