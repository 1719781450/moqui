<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Edit" default-menu-index="3">

    <parameter name="entityName"/>
    <parameter name="detailEntityName"/>

    <transition name="list"><default-response url="../../MainEntityList"/></transition>
    <transition name="find"><default-response url="../../AutoFind"/></transition>
    <transition name="edit"><default-response url="."/></transition>
    <transition name="update">
        <actions><service-call name="update#${entityName}" in-map="true"/></actions>
        <default-response url="." parameter-map="ec.entity.getEntityDefinition(entityName).getPrimaryKeys(context)"/>
    </transition>
    <transition name="export">
        <actions>
            <entity-find-one entity-name="${entityName}" value-field="entityValue"/>
            <script><![CDATA[
            File outFile = new File(filename)
            if (!outFile.createNewFile()) {
                ec.message.addError("File ${filename} already exists.")
            } else {
                PrintWriter pw = new PrintWriter(outFile)
                pw.println("<?xml version=\"1.0\" encoding=\"UTF-8\"?>")
                pw.println("<entity-facade-xml>")
                int valuesWritten = entityValue.writeXmlText(pw, null, true)
                pw.println("</entity-facade-xml>")
                pw.close()
                ec.message.addMessage("Wrote ${valuesWritten} records to file ${filename}")
            }
            ]]></script>
        </actions>
        <default-response url="." parameter-map="ec.entity.getEntityDefinition(entityName).getPrimaryKeys(context)"/>
    </transition>

    <actions>
        <entity-find-one entity-name="${entityName}" value-field="fieldValues"/>
    </actions>
    <widgets>
        <container>
            <link url="list" text="Entity List"/>
            <link url="find" text="Find ${ec.entity.getEntityDefinition(entityName).getPrettyName(null, null)}"/>
        </container>
        <form-single name="UpdateMasterEntityValue" transition="update" dynamic="true">
            <auto-fields-entity entity-name="${entityName}" include="pk" field-type="display"/>
            <auto-fields-entity entity-name="${entityName}" include="nonpk" field-type="edit"/>
            <field name="entityName"><default-field><hidden/></default-field></field>
            <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
        </form-single>
        <form-single name="ExportMasterEntity" transition="export" dynamic="true">
            <auto-fields-entity entity-name="${entityName}" include="pk" field-type="hidden"/>
            <field name="entityName"><default-field><hidden/></default-field></field>
            <field name="filename"><default-field><text-line size="100"/></default-field></field>
            <field name="submitButton"><default-field title="Export with Dependents to File"><submit/></default-field></field>
        </form-single>
    </widgets>
</screen>
