<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Edit" default-menu-index="3">

    <parameter name="entityName"/>
    <parameter name="detailEntityName"/>

    <transition name="list"><default-response url="../../MainEntityList"/></transition>
    <transition name="find"><default-response url="../../AutoFind"/></transition>
    <transition name="create">
        <actions><service-call name="create#${detailEntityName}" in-map="true"/></actions>
        <default-response url="."/>
    </transition>
    <transition name="update">
        <actions><service-call name="update#${detailEntityName}" in-map="true"/></actions>
        <default-response url="." parameter-map="ec.entity.getEntityDefinition(entityName).getPrimaryKeys(context)"/>
    </transition>
    <transition name="listSubmit">
        <actions>
            <if condition="submit=='Delete'"><service-call name="delete#${detailEntityName}" in-map="true"/></if>
        </actions>
        <conditional-response url=".">
            <condition><expression>submit=="Delete"</expression></condition>
        </conditional-response>
        <default-response url="../AutoEditMaster" parameter-map="ec.entity.getEntityDefinition(detailEntityName).getPrimaryKeys(context)">
            <parameter name="detailEntityName" from="entityName"/>
            <parameter name="entityName" from="detailEntityName"/>
        </default-response>
    </transition>

    <actions>
        <entity-find entity-name="${detailEntityName}" list="entityValueList" offset="0" limit="50">
            <search-form-inputs/>
        </entity-find>
    </actions>
    <widgets>
        <container>
            <link url="list" text="Entity List"/>
            <link url="find" text="Find ${ec.entity.getEntityDefinition(entityName).getPrettyName(null, null)}"/>
            <container-dialog id="CreateValueDialog" button-text="New ${ec.entity.getEntityDefinition(detailEntityName).getPrettyName(null, entityName)}">
                <form-single name="CreateEntityValue" transition="create" dynamic="true">
                    <auto-fields-entity entity-name="${detailEntityName}" field-type="edit"/>
                    <field name="entityName"><default-field><hidden/></default-field></field>
                    <field name="detailEntityName"><default-field><hidden/></default-field></field>
                    <field name="submit"><default-field title="Create"><submit/></default-field></field>
                </form-single>
            </container-dialog>
        </container>
        <form-list name="ListEntityValue" list="entityValueList" transition="listSubmit" multi="false" dynamic="true">
            <field name="entityName"><default-field><hidden/></default-field></field>
            <field name="detailEntityName"><default-field><hidden/></default-field></field>
            <field name="edit"><default-field title="Edit"><submit/></default-field></field>
            <field name="delete"><default-field title="Delete"><submit confirmation="Are you sure?"/></default-field></field>
            <auto-fields-entity entity-name="${detailEntityName}" field-type="display"/>
        </form-list>
    </widgets>
</screen>
