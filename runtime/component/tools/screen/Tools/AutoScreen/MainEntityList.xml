<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Auto Screen Entity List" default-menu-index="1">

    <transition name="find">
        <default-response url="../AutoFind"/>
    </transition>

    <actions>
        <set field="allEntityList" from="ec.entity.getAllEntitiesInfo(orderByField?:'+entityName', false)"/>
        <set field="masterEntityList" from="ec.entity.getAllEntitiesInfo(orderByField?:'+package', true)"/>
    </actions>
    <widgets>
        <form-single name="SelectEntity" transition="find">
            <field name="entityName"><default-field title="All Entities">
                <drop-down combo-box="true" allow-empty="true">
                    <list-options list="allEntityList" key="${entityName}"
                                  text="${ec.entity.getEntityDefinition(entityName).getPrettyName(null, null)} - ${context.package}"/>
                </drop-down>
            </default-field></field>
            <field name="submit"><default-field title="Select"><submit/></default-field></field>
            <field-layout><field-row><field-ref name="entityName"/><field-ref name="submit"/></field-row></field-layout>
        </form-single>
        <form-list name="EntityList" list="masterEntityList">
            <field name="package">
                <header-field show-order-by="true"/>
                <default-field><display also-hidden="false"/></default-field>
            </field>
            <field name="entityName">
                <header-field title="Master Entity" show-order-by="true"/>
                <default-field><link url="find" text="${ec.entity.getEntityDefinition(entityName).getPrettyName(null, null)}"/></default-field>
            </field>
        </form-list>
    </widgets>
</screen>
