<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Find" default-menu-index="2">

    <parameter name="entityName"/>

    <transition name="list"><default-response url="../EntityList"/></transition>
    <transition name="find"><default-response url="."/></transition>
    <transition name="create">
        <actions><service-call name="create#${ec.web.requestParameters.entityName}" in-map="ec.web.requestParameters"/></actions>
        <default-response url="."/>
    </transition>
    <transition name="listSubmit">
        <actions>
            <log level="info" message="Request Parameters: ${ec.web.requestParameters}"/>
            <if condition="ec.web.requestParameters.submit=='Delete'">
                <service-call name="delete#${ec.web.requestParameters.entityName}" in-map="ec.web.requestParameters"/>
            </if>
        </actions>
        <conditional-response url=".">
            <!-- TODO: see why this conditional response isn't working, is always going to EntityDataEdit -->
            <condition><expression>ec.web.requestParameters.submit=="Delete"</expression></condition>
        </conditional-response>
        <!-- TODO: add support for parameter-map attribute -->
        <default-response url="../EntityDataEdit" parameter-map="ec.web.requestParameters"/>
    </transition>

    <actions>
        <set field="entityName" from="ec.web.requestParameters.entityName"/>
        <entity-find entity-name="${entityName}" list="entityValueList" offset="0" limit="50">
            <search-form-inputs/>
        </entity-find>
    </actions>
    <widgets>
        <container>
            <link url="list" text="Entity List"/>
            <container-dialog id="FindValueDialog" button-text="Find">
                <form-single name="FindEntityValue" transition="find" dynamic="true">
                    <auto-fields-entity entity-name="${entityName}" field-type="find"/>
                    <field name="entityName"><default-field><hidden/></default-field></field>
                    <field name="submit"><default-field title="Find"><submit/></default-field></field>
                </form-single>
            </container-dialog>
            <container-dialog id="CreateValueDialog" button-text="New Value">
                <form-single name="CreateEntityValue" transition="create" dynamic="true">
                    <auto-fields-entity entity-name="${entityName}" field-type="edit"/>
                    <field name="entityName"><default-field><hidden/></default-field></field>
                    <field name="submit"><default-field title="Create"><submit/></default-field></field>
                </form-single>
            </container-dialog>
        </container>
        <form-list name="ListEntityValue" list="entityValueList" transition="listSubmit" multi="false" dynamic="true">
            <auto-fields-entity entity-name="${entityName}" field-type="display"/>
            <field name="entityName"><default-field><hidden/></default-field></field>
            <!-- <field name="edit">
                <default-field>
                    <link text="Edit" url="edit"/>
                </default-field>
            </field> -->
            <field name="edit"><default-field title="Edit"><submit/></default-field></field>
            <field name="delete"><default-field title="Delete"><submit/></default-field></field>
        </form-list>
    </widgets>
</screen>
