<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Edit" default-menu-index="3">

    <parameter name="entityName"/>

    <transition name="list"><default-response url="../EntityList"/></transition>
    <transition name="find"><default-response url="../EntityDataFind"/></transition>
    <transition name="update">
        <actions><service-call name="update#${ec.web.parameters.entityName}" in-map="ec.web.parameters"/></actions>
        <default-response url="."/>
    </transition>

    <actions>
        <set field="entityName" from="ec.web.parameters.entityName"/>
        <entity-find-one entity-name="${entityName}" value-field="fieldValues"/>
    </actions>
    <widgets>
        <container>
            <link url="list" text="Entity List"/>
            <link url="find" text="Find"/>
        </container>
        <label text="Request Parameters: ${ec.web.requestParameters}"/>
        <form-single name="UpdateEntityValue" transition="update" dynamic="true">
            <auto-fields-entity entity-name="${entityName}" field-type="edit"/>
            <field name="entityName"><default-field><hidden/></default-field></field>
            <field name="submit"><default-field title="Update"><submit/></default-field></field>
        </form-single>
    </widgets>
</screen>
