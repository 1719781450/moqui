<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.0.xsd"
        default-menu-title="Tests" default-menu-index="9" require-authentication="false">
    <macro-template type="html" location="template/screen-macro/TestScreenHtmlMacros.ftl"/>

    <transition name=".*">
        <actions><script>ec.message.addMessage("Transition name was [${sri.getCurrentScreenUrl().targetTransitionActualName}]")</script></actions>
        <default-response url="."/>
    </transition>

    <pre-actions>
        <set field="html_title" value="A Silly Test Title"/>
        <set field="html_description" value="This page was made for testing, and that's just what it'll do."/>
        <set field="html_keywords" value="moqui,test,label,user,messages,error,silly"/>
    </pre-actions>

    <widgets>
        <link url="../../Login/login" text="Login as John Doe, wrong password test">
            <parameter name="username" value="john.doe"/>
            <parameter name="password" value="wrong"/>
        </link>

        <label text="User ID: ${ec.user.userId}" type="p"/>
        <label text="User Name: ${ec.user.userAccount?.userFullName}" type="p"/>
        <label text="Messages: ${ec.message.messages}" type="p"/>
        <label text="Errors: ${ec.message.errors}" type="p"/>
        <label text="Context: ${context.toString()}" type="p"/>
    </widgets>
</screen>
